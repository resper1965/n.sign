# ===========================================
# ness.MKT - Environment Variables Template
# ===========================================
# Copy this file to .env.local for local development

# ===========================================
# Firebase Client Configuration
# ===========================================
# Required for Firebase Auth and Firestore
# Get these from Firebase Console > Project Settings > Your Apps

NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=ness-mkt.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=ness-mkt
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=ness-mkt.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id-here
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id-here

# ===========================================
# Gamma AI Integration (Optional)
# ===========================================
# For AI-powered presentation generation
# Get API key from https://gamma.app

GAMMA_API_KEY=your-gamma-api-key-here
GAMMA_THEME_ID=your-theme-id-here

# ===========================================
# Theme Configuration (Optional)
# ===========================================
# Customize brand appearance

NEXT_PUBLIC_BRAND_NAME=NESS
NEXT_PUBLIC_BRAND_PRIMARY_COLOR=#00ade8

# ===========================================
# Development Settings
# ===========================================
# Leave empty for demo mode (no Firebase required)

# Demo mode is automatically enabled when Firebase is not configured
# Users can test the application without a real Firebase project
